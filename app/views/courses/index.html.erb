

<div class='row'>

	<div class="col-xs-6">
	<h1>Courses</h1>
		<form class="navbar-form navbar-right" role="search">
		  <div class="form-group">
		    <input type="text"  class="form-control" placeholder="Search Books" name="search" data-provide="typeahead" data-source='<%= @courses %>' matcher="search(query)">
		  </div>
		  <button type="submit" class="btn btn-default">Search</button>
		</form>
	</div>
	<div class="col-xs-6">
</div>


<% @courses.each do |course| %>
<div class="row">
      <div class="col-xs-12">
            <%= render course %>
      </div>
</div>
<% end %>

<br>
<%= link_to 'New Course', new_course_path, class:'btn btn-primary' %>
<br>