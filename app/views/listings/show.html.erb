<div class="page-header">
  <h1><%= show_price(@listing.min_price, 0) + " | "%> <small> Listing for <%= link_to(truncate(@listing.book.title), @listing.book) %></small>
  </h1>
</div>

<div class="row">
  <h4>
    <div class="col-md-6">
      <dl class="dl-horizontal">
        <dt>Listing Type</dt>
        <dd><%= show_type(@listing) %></dd>
        <dt>Quality</dt>
        <dd><%= show_quality(@listing) %></dd>
        <dt>Description</dt>
        <dd><%= @listing.description %></dd>
        <dt>Price</dt>
        <dd><%= show_price(@listing.min_price, 2) %></dd>
        <dt>Seller</dt>
        <dd><%= show_seller(@listing) %></dd>
      </dl>
    </div>
  </h4>
</div>

<br>
<table class='table table-striped'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    <th>Offer</th>
    <th>Name</th>
    <th>Price</th>
  </thead>

  <tbody>
    <%= render @listing.offers %>
  </tbody>
</table>


<div class='text-right'>
  <%= link_to fa_icon('dollar', text:'Make Offer'), new_book_listing_offer_path(@listing.book, @listing), class: 'btn btn-sm btn-primary' %>

  <% if can? :modify, Listing %>
    <%= link_to fa_icon('pencil', text:'Edit Listing'), edit_book_listing_path(@listing.book, @listing), class: 'btn btn-sm btn-default' %>
  <% end %>

  <% if can? :destroy, Listing %>
    <%= link_to fa_icon('trash-o', text:'Delete Listing'),  book_listing_path(@listing.book, @listing), method: :delete, data: { confirm: 'Are you sure?'  }, class:'btn btn-sm btn-danger' %>
  <% end %>
</div>
