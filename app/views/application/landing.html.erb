<!DOCTYPE html>
<html>
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>
<body style="overflow-x: hidden;">
	<%= image_tag("Andover.jpg", :class => "bg") %>
	
	<div class="container">
	  <% if notice %>
	    <div class="alert alert-success alert-dismissible" role="alert">
	    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	    <%= notice %>
	    </div>
	  <% end %>

	  <% if alert %>
	    <div class="alert alert-danger alert-dismissible" role="alert">
	    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	    <%= alert %>
	    </div>
	  <% end %>
	</div>
	
	<br>
	<br>
	<br>
	<br>
	<div class="container text-center">	
		<%=  image_tag "logo_final.png"%>	
	</div>
	<br>
	<br>
	<div class="row text-center">
		<%= link_to fa_icon('user', text:'Sign up'),  new_user_registration_path, class: 'btn btn-xl btn-default' %> &nbsp;&nbsp;
		<%= link_to fa_icon('unlock-alt', text:'Log in'), new_user_session_path, class: 'btn btn-xl btn-primary' %>
	</div>
</body>
</html>