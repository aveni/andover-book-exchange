<div class="row col-md-10 col-md-offset-1">

	<%= simple_form_for(@exchange	, html:{class:'form-horizontal'}) do |f| %>
	      <% f.error_notification %>

	      <%= f.association :listing, collection: Listing.all, :label_method => lambda { |l| "#{l.book.title} | #{show_name(l.user)}" } %>
	      <%= f.association :user, label: "Buyer", collection: User.all, :label_method => lambda { |u| show_name(u) } %>

	      <div class='row text-center'>
	     	  <%= f.submit nil, class:'btn btn-primary' %>
	     	  <%= link_to 'Cancel', :back, class:'btn btn-default'%>
	     </div>

	  <% end %>

</div>