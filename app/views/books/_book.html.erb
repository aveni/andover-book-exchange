
<a href=<%= book_path(book) %> style="text-decoration:none;">
<div class="thumbnail thumbnail-book">
    <div class="caption-top fill-div" style="background:rgba(<%= COLORS[SUBJECT_COLORS[book.courses.first.subject]] %>);">
        <h4 class="center-title resize"><%=  book.title %></h4>
        <h5 class="center-title resize"><%= book.author %></h5>
        <h4 class="center-title resize"> <%= show_subject(book.courses.first, false) %> </h4>
    </div>
    <%= image_tag "book.svg" %>
    <div class="caption">
        <h3 class='text-center resize'><%= truncate(book.title, length:20) %></h3>
        <h5 class='text-center resize'><%= truncate(book.author) %></h5>    
    </div> 
</div>
</a>          
