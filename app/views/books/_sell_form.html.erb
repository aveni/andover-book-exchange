<div class="page-header">
  <h1>Search for a book to sell</h1>
</div>
<br>

<div class="row">

  <%= form_tag(create_sell_books_path, method: "post", :class => "form-horizontal", role: 'form') do %>
  
  <div class="col-xs-6 col-offset-1">
  	<%= text_field_tag :isbn, nil, :placeholder=>"ISBN", class: "form-control"%><br>
  	<%= link_to 'Cancel', books_path, class:'btn btn-default ' %>

  </div>
  <div class="col-xs-6">
  	<%= submit_tag "Search",  class: 'btn btn-success' %>
  </div>
<% end %>
</div>